{{!-- header --}}
<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="container" id="header">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Welcome to the chat group</h1>
        </div>
    </div>
</div>
{{!-- scrollbox holding the conversation --}}
<div class="myBox">
    <div class="col-xs-6 text-center" class="task">
        <div class="row">
            {{#each Chatroom_data}}
                {{#unless this.devoured}}
                    <div class="col-xs-6" id="text-box">
                        <pre> {{this.chatroom_name}} </pre>
                            <form method="POST" action="/chatrooms/update?_method=PUT" class="button-size">
                                <input type="hidden" name="chatroom_id" type="text" value="{{this.id}}">
                                    <button type="submit" class="btn btn-default" id="delete-button">x</button>
                            </form>
                    </div>
                {{/unless}}
            {{/each}}
        </div>
    </div>
</div>

